<div id ="home_page">
  <h1>Sign in</h1>
  <%= form_for(resource, :as => resource_name, :url => new_user_session_path(resource_name)) do |f|%>

    <div class="row">
      <div class="span6 offset3">
        <%= f.label :email %><br />
        <%= f.email_field :email, :autofocus => true %>
      </div>
    </div>

    <div class="row">
      <div class="span6 offset3">
        <%= f.label :password %><br />
        <%= f.password_field :password %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="row">
        <div class="span 6 offset3">
          <%= f.check_box :remember_me %> <%= f.label :remember_me %>
        </div>
      </div>
    <% end -%>                      

    <div class="row">
      <div class="span6 offset3">
        <%= f.submit "Sign in", class: "btn btn-primary sign_in" %>
      </div>
    </div>

  <%end%>

</div>