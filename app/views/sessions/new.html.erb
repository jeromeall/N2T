<body>
<div id ="home_page">
            <h1>Sign in</h1>
            <%= form_for(:session, url: sessions_path) do |f| %>
                <div class="row">
                    <div class="span6 offset3">
                    	<%= f.text_field :email, placeholder: "Email" %>
                    </div>
                </div>

                <div class="row">
                    <div class="span6 offset3">
                    	<%= f.password_field :password, placeholder: "Password" %>
                    </div>
                </div>

                <div class="row">
                    <div class="span6 offset3">
                    	<%= f.submit "Log In", class: "btn btn-primary sign_in" %>
                    </div>
                </div>

            <%end%>
        </div>
        
</div>